{
  "name": "switchboard",
  "version": "1.1.1",
  "main": "dist/index.js",
  "license": "MIT",
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gulp-posthtml": "^3.0.4",
    "helmet": "^3.21.2",
    "particlesjs": "^2.2.3",
    "posthtml": "^0.12.0",
    "posthtml-include": "^1.3.3"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/assets.ts",
    "tsc": "tsc",
    "build-style": "gulp css",
    "build-code": "npm-run-all clean tsc copy-assets",
    "code:loop": "npm-run-all build-code start",
    "watch-code": "nodemon --watch src -e ts,ejs --exec npm run code:loop",
    "watch-style": "gulp watch",
    "dev:loop": "npm-run-all --parallel watch-code watch-style",
    "dev": "npm-run-all build-style dev:loop",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/helmet": "0.0.45",
    "@types/shelljs": "^0.8.6",
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "fs-extra": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.26",
    "rimraf": "^3.0.0",
    "sass": "^1.25.0",
    "shelljs": "^0.8.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500"
  }
}
